<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Nunito:ital,wght@0,200..1000;1,200..1000&family=Outfit:wght@100..900&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="{{ asset('css/style.css')}}">
        {% block stylesheets %}
        {% endblock %}
        
        <script src="{{ asset('js/script.js')}}" defer></script>
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body class="grid">
        <div class="sidebar grey1-bg column grid">

            <h2 class="h1 row">
                <a class="row" href="{{ path('app_home') }}" id="home-link">
                    Session<span class="blue">Planner</span>
                </a>
            </h2>

            <nav class="column">
                {% set route = app.request.get('_route') %}
                <div class="nav_block column">
                    <h3>Students</h3>
                    <ul class="sat18 column">
                        <li>
                            <a class="row {{route == 'app_student' ? 'active' }}" href={{ path('app_student')}}>
                                <svg width="16" height="13" viewBox="0 0 16 13" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M1 11.5H15M1 6.5H15M1 1.5H9" stroke="var(--blue)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                                Student List
                            </a>
                        </li>
                        <li>
                            <a class="row {{route == 'new_student' ? 'active' }}" href={{ path('new_student')}}>
                                <svg width="19" height="19" viewBox="0 0 19 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M9.5 17.9852V9.49995M9.5 9.49995V1.01465M9.5 9.49995H17.9853M9.5 9.49995H1.01469" stroke="var(--blue)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                                Add Student
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="nav_separator"></div>

                <div class="nav_block column">
                    <h3>Teachers</h3>
                    <ul class="sat18 column">
                        <li>
                            <a class="row {{route == 'app_teacher' ? 'active' }}" href={{ path('app_teacher')}}>
                                <svg width="16" height="13" viewBox="0 0 16 13" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M1 11.5H15M1 6.5H15M1 1.5H9" stroke="var(--blue)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                                Teacher List
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="nav_separator"></div>
                
                <div class="nav_block column">
                    <h3>Sessions</h3>
                    <ul class="sat18 column">
                        <li>
                            <a class="row {{route == 'app_session' ? 'active' }}" href={{ path('app_session')}}>
                                <svg width="16" height="13" viewBox="0 0 16 13" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M1 11.5H15M1 6.5H15M1 1.5H9" stroke="var(--blue)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                                Session List
                            </a>
                        </li>
                        <li>
                            <a class="row {{route == 'new_session' ? 'active' }}" href={{ path('new_session')}}>
                                <svg width="19" height="19" viewBox="0 0 19 19" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M9.5 17.9852V9.49995M9.5 9.49995V1.01465M9.5 9.49995H17.9853M9.5 9.49995H1.01469" stroke="var(--blue)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                </svg>
                                Add Session
                            </a>
                        </li>
                    </ul>
                </div>

                <div class="nav_separator"></div>
                
                <div class="nav_block column">
                    <h3>User</h3>
                    <ul class="sat18 column">

                        {% if app.user %}
                            <li>
                                <a class="row {{route == 'app_logout' ? 'active' }}" href={{ path('app_logout')}}>
                                    <svg width="20" height="18" viewBox="0 0 20 18" fill="none" xmlns="http://www.w3.org/2000/svg">
                                        <path d="M13 16.5C13 14.2909 10.3137 12.5 7 12.5C3.68629 12.5 1 14.2909 1 16.5M15 11.5L17 9.49998M17 9.49998L19 7.5M17 9.49998L15 7.5M17 9.49998L19 11.5M7 9.5C4.79086 9.5 3 7.70914 3 5.5C3 3.29086 4.79086 1.5 7 1.5C9.20914 1.5 11 3.29086 11 5.5C11 7.70914 9.20914 9.5 7 9.5Z" stroke="var(--blue)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                    </svg>
                                    Log out
                                </a>
                            </li>
                            {% else %}
                                <li>
                                    <a class="row {{route == 'app_register' ? 'active' }}" href={{ path('app_register')}}>
                                        <svg width="16" height="13" viewBox="0 0 16 13" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M1 11.5H15M1 6.5H15M1 1.5H9" stroke="var(--blue)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                        </svg>
                                        Register
                                    </a>
                                </li>
                                <li>
                                    <a class="row {{route == 'app_login' ? 'active' }}" href={{ path('app_login')}}>
                                        <svg width="16" height="13" viewBox="0 0 16 13" fill="none" xmlns="http://www.w3.org/2000/svg">
                                            <path d="M1 11.5H15M1 6.5H15M1 1.5H9" stroke="var(--blue)" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
                                        </svg>
                                        Log in
                                    </a>
                                </li>
                        {% endif %}
    
                    </ul>
                </div>

            </nav>
        </div>

        {% for label, messages in app.flashes %}
            <div class="{{ label }} flash grey3-bg row">
                {% for message in messages %}
                    <p>{{ message }}</p>
                {% endfor %}
            </div>
        {% endfor %}

        {% block body %}{% endblock %}

    </body>
</html>
